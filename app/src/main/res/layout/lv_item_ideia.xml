<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/teste_walpaper">

    <androidx.cardview.widget.CardView
        android:layout_width="411dp"
        android:layout_height="255dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="377dp"
            android:layout_height="240dp"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent"
            android:foreground="@drawable/border_black"
            android:padding="1dp"
            app:cardBackgroundColor="#F2F2F2"
            app:cardCornerRadius="4dp"
            app:cardElevation="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/Titulo_ideia"
                android:layout_width="359dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@android:color/transparent"
                android:foreground="@drawable/border_black"
                android:padding="2dp"
                android:text="Titulo_ideia"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="25dp"
                app:layout_constraintEnd_toEndOf="parent"
                tools:layout_editor_absoluteX="100dp"
                tools:layout_editor_absoluteY="55dp" />

            <TextView
                android:id="@+id/Tipo_ideia"
                android:layout_width="359dp"
                android:layout_height="61dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="100dp"
                android:layout_marginBottom="10dp"
                android:background="@android:color/transparent"
                android:foreground="@drawable/border_black"
                android:padding="2dp"
                android:text="Tipo_ideia"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/Titulo"
                tools:layout_editor_absoluteX="100dp"
                tools:layout_editor_absoluteY="0dp" />

            <TextView
                android:id="@+id/User_ideia"
                android:layout_width="359dp"
                android:layout_height="44dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="170dp"
                android:layout_marginBottom="10dp"
                android:background="@android:color/transparent"
                android:foreground="@drawable/border_black"
                android:padding="2dp"
                android:text="User_ideia"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                tools:layout_editor_absoluteX="100dp"
                tools:layout_editor_absoluteY="0dp" />

        </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
